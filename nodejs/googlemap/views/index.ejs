<!DOCTYPE HTML>
<html>
<head>
  <meta charset = "UTF-8">
  <title>GeoHash</title>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <script type="text/javascript">
    function initialize() {
     // var mapLocation = new google.maps.LatLng('37.390845', '126.651871'); // 지도에서 가운데로 위치할 위도와 경도
      var mapLocation = new google.maps.LatLng('<%= map_location_x %>', '<%= map_location_y %>');
      var markLocation = new google.maps.LatLng('<%= mark_location_x %>', '<%= mark_location_y %>'); // 마커가 위치할 위도와 경도

      ///37.390845, 126.651871 송도119
      ///37.370077, 126.655474 송도호반
      var mapOptions = {
        center: mapLocation, // 지도에서 가운데로 위치할 위도와 경도(변수)
        zoom: 15, // 지도 zoom단계
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      var map = new google.maps.Map(document.getElementById("map-canvas"), // id: map-canvas, body에 있는 div태그의 id와 같아야 함
              mapOptions);

      var size_x = 40; // 마커로 사용할 이미지의 가로 크기
      var size_y = 40; // 마커로 사용할 이미지의 세로 크기

      // 마커로 사용할 이미지 주소

      var image = {
        url: 'http://cyh1704.dothome.co.kr/image/fire3.png'
        // This marker is 20 pixels wide by 32 pixels high.
        //size: new google.maps.Size(20, 32)
        // The origin for this image is (0, 0).

        // The anchor for this image is the base of the flagpole at (0, 32).
      };




      var latlng = new google.maps.LatLng(-34.397, 150.644);
      var marker;
      marker = new google.maps.Marker({
        position: markLocation, // 마커가 위치할 위도와 경도(변수)
        map: map,
        icon: image, // 마커로 사용할 이미지(변수)
//             info: '말풍선 안에 들어갈 내용',
        title: '화감시' // 마커에 마우스 포인트를 갖다댔을 때 뜨는 타이틀
      });

      var content = ""; // 말풍선 안에 들어갈 내용

      // 마커를 클릭했을 때의 이벤트. 말풍선 뿅~
      var infowindow = new google.maps.InfoWindow({
        //content: content
      });
      google.maps.event.addListener(marker, "click", function() {
        infowindow.open(map,marker);
        window.location.href = "http://localhost:8888";
      });



    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</head>
<body>
<div id="map-canvas" style="width: 100%; height: 1600px"></div>

</body>
</html>